<Window x:Class="What_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:What_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="ファイル選択" HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" VerticalAlignment="Top" Width="229" FontSize="16"/>
        <Button x:Name="button" Content="{Binding ClickMode, ElementName=button}" HorizontalAlignment="Left" Height="32" Margin="124,10,0,0" VerticalAlignment="Top" Width="100" Click="button_Click"/>
        <Label Content="選択されたファイル：" HorizontalAlignment="Left" Height="31" Margin="10,47,0,0" VerticalAlignment="Top" Width="127"/>

    </Grid>
</Window>
